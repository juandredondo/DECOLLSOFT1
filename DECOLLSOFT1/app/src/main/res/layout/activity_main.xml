<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DECOLLSOFT MOVIL ABONOS"
        android:id="@+id/tvDecollsoftmovil"
        android:textColor="#4d65d2"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" RUTA  "
        android:id="@+id/tvRuta"
        android:textColor="#000000"
        android:textSize="@dimen/tamatexto1"
        android:textStyle="bold|italic"
        android:layout_above="@+id/etUsuario"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUsuario"
        android:textStyle="italic"
        android:layout_below="@+id/tvDecollsoftmovil"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CLIENTE"
        android:id="@+id/tvCliente"
        android:textColor="#000000"
        android:textSize="@dimen/tamatexto1"
        android:textStyle="bold|italic"
        android:layout_below="@+id/imageView10"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spCliente"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        android:layout_below="@+id/tvCliente"
        android:layout_toEndOf="@+id/tvCliente" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABONO"
        android:id="@+id/bAbono"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_below="@+id/imageView11"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/cliente_icon"
        android:layout_below="@+id/tvCliente"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView11"
        android:layout_toStartOf="@+id/spCliente" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/localizacion"
        android:layout_below="@+id/tvRuta"
        android:layout_alignEnd="@+id/tvRuta"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/etUsuario" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_below="@+id/etUsuario"
        android:src="@drawable/linealibreporsilasmoscas" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:src="@drawable/linealibreporsilasmoscas"
        android:layout_below="@+id/spCliente"
        android:layout_alignParentStart="true" />

</RelativeLayout>
